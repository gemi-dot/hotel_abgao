{% extends 'hotel/base.html' %}
{% load static %}

{% block content %}
<div class="container mt-4">
    <h1 class="mb-4">Dashboard</h1>

    <!-- Stats Cards -->
    <div class="row text-center mb-4">
        <div class="col-md-3 mb-2">
            <div class="card text-white bg-primary shadow-sm">
                <div class="card-body">
                    <strong>Total Rooms</strong>
                    <h4 class="mt-2">{{ total_rooms }}</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-2">
            <div class="card text-white bg-success shadow-sm">
                <div class="card-body">
                    <strong>Available Rooms</strong>
                    <h4 class="mt-2">{{ available_rooms }}</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-2">
            <div class="card text-white bg-warning shadow-sm">
                <div class="card-body">
                    <strong>Total Bookings</strong>
                    <h4 class="mt-2">{{ total_bookings }}</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-2">
            <div class="card text-white bg-info shadow-sm">
                <div class="card-body">
                    <strong>Checked In</strong>
                    <h4 class="mt-2">{{ checked_in }}</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <h4 class="mb-3">Quick Actions</h4>
    <div class="mb-4 d-flex flex-wrap gap-2">
        <a href="{% url 'room_list' %}" class="btn btn-outline-primary btn-sm">üè® Manage Rooms</a>
        <a href="{% url 'booking_list' %}" class="btn btn-outline-secondary btn-sm">üìã View Bookings</a>
        <a href="{% url 'booking_create' %}" class="btn btn-outline-success btn-sm">‚ûï Create Booking</a>
        <a href="{% url 'available_rooms' %}" class="btn btn-outline-info btn-sm">‚úÖ Available Rooms</a>
        <a href="{% url 'booking_history' %}" class="btn btn-outline-warning btn-sm">üìú Booking History</a>
    </div>

    <!-- Filters -->
    <h4 class="mb-3">Recent Bookings</h4>
    <form method="get" class="row g-2 mb-3">
        <div class="col-md-3">
            <label class="form-label">From</label>
            <input type="date" name="start_date" class="form-control form-control-sm" value="{{ request.GET.start_date }}">
        </div>
        <div class="col-md-3">
            <label class="form-label">To</label>
            <input type="date" name="end_date" class="form-control form-control-sm" value="{{ request.GET.end_date }}">
        </div>
        <div class="col-md-3">
            <label class="form-label">Room</label>
            <select name="room" class="form-select form-select-sm">
                <option value="">All Rooms</option>
                {% for room in rooms %}
                    <option value="{{ room.id }}" {% if request.GET.room == room.id|stringformat:"s" %}selected{% endif %}>{{ room.name }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">Search Customer</label>
            <input type="text" name="search" class="form-control form-control-sm" placeholder="Customer name" value="{{ request.GET.search }}">
        </div>
        <div class="col-12 text-end mt-2">
            <button type="submit" class="btn btn-sm btn-primary">Apply Filters</button>
            <a href="{% url 'dashboard' %}" class="btn btn-sm btn-outline-secondary">Reset</a>
        </div>
    </form>

    <!-- Bookings Table -->
<!-- Bookings Table -->
<div class="table-responsive mb-3">
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-light">
            <tr>
                <th>Room</th>
                <th>Customer</th>
                <th>Check-in</th>
                <th>Check-out</th>
                <th>Checked In?</th>
            </tr>
        </thead>
        <tbody>
            {% for booking in recent_bookings %}
                <tr>
                    <td>
                        <div>
                            <span class="fw-bold">{{ booking.room }}</span><br>
                            <span class="badge bg-secondary">{{ booking.room.room_type }}</span>
                        </div>
                    </td>
                    <td>{{ booking.customer_name }}</td>
                    <td>{{ booking.check_in|date:"M d, Y" }}</td>
                    <td>{{ booking.check_out|date:"M d, Y" }}</td>
                    <td>
                        {% if booking.is_checked_in %}
                            <span class="text-success">‚úÖ</span>
                        {% else %}
                            <span class="text-danger">‚ùå</span>
                        {% endif %}
                    </td>
                </tr>
            {% empty %}
                <tr><td colspan="5" class="text-center">No bookings found.</td></tr>
            {% endfor %}
        </tbody>
    </table>
</div>


    <!-- Pagination -->
    {% if recent_bookings.has_other_pages %}
        <nav class="d-flex justify-content-center">
            <ul class="pagination pagination-sm">
                {% if recent_bookings.has_previous %}
                    <li class="page-item">
                        <a class="page-link" href="?page={{ recent_bookings.previous_page_number }}&{{ request.GET.urlencode|cut:'page=' }}">‚Üê</a>
                    </li>
                {% endif %}
                {% for num in recent_bookings.paginator.page_range %}
                    <li class="page-item {% if recent_bookings.number == num %}active{% endif %}">
                        <a class="page-link" href="?page={{ num }}&{{ request.GET.urlencode|cut:'page=' }}">{{ num }}</a>
                    </li>
                {% endfor %}
                {% if recent_bookings.has_next %}
                    <li class="page-item">
                        <a class="page-link" href="?page={{ recent_bookings.next_page_number }}&{{ request.GET.urlencode|cut:'page=' }}">‚Üí</a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    {% endif %}
</div>
{% endblock %}
